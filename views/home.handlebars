<div class="container">
        <h1> PROGRAMAÇÃO </h1>
        
        <div class="flex-container-now">     
            <div><img src="{{toNow.imgPrograma}}" class="img-now"></div>
            <div class="marginLive">
                <h2 class="titleNow-content-hr">Passando Agora</h2>   
                <h2 class="titleNow-content">{{toNow.tituloPrograma}}</h2>
            </div>  
        </div>
    
        <div class="flex-container-lista-title margin-10">
            <div class="iconArrow"><a href="/date/{{lastDay}}" ><i class="fas fa-arrow-circle-left"></i></a></div>
            <div>
                <h2 class="titleDate">{{dateNow}}</h2> 
            </div>
            <div class="iconArrowDisabled"><a href="/date/{{tomorrow}}"><i class="fas fa-arrow-circle-right"></i></a></div>
        </div>

   {{#each programation}}
      
        <button type="button" class="collapsible">
            <div class="flex-container-lista">                
                <div class="margin-10 time"><div class="textHour">{{humanStartTime}} às {{humanEndTime}}<span class="textRed">{{#if noAr}}<br> No Ar {{/if}}</span></div></div>
                <div class="flex-group-time">
                    <div class="margin-10"><img src="{{logoPrograma}}" class="img-logo-prog"></div>
                    <div class="margin-10"><div class="textTitle">{{tituloPrograma}}</div></div>
                </div>    
            </div>  
        </button>
        <div class="content">
            <div class="flex-container-conteudo">               
                <div class="width40"><img src="{{imgPrograma}}" class="img-content"></div>
                <div class="width60">
                    <p class="configP">                       
                        <span class="textTitleContent up">{{tituloPrograma}}</span>
                    </p>

                    <p>                       
                        <span class="textContent">{{descricao}}</span>
                    </p>
                    <p>
                        <span class="textContent">{{sinopse}}</span>
                    </p>
                    <p class="textClassification">
                        <span class="textTitleContent"> Idade: </span>
                        <span class="textContent">{{idade}}</span>
                        <span class="textTitleContent"> Sexo: </span>
                        <span class="textContent"{{sexo}}</span>
                        <span class="textTitleContent"> Drogas: </span>
                        <span class="textContent"> {{drogas}}</span>
                        <span class="textTitleContent"> Violência: </span>
                        <span class="textContent"> {{violencia}}</span>
                    </p>
                
                </div>
            </div>
        </div>
 
    {{/each}}
</div>